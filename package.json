{
  "name": "reflect-sync",
  "version": "0.14.1",
  "description": "Fast bidirectional file synchronization using rsync and sqlite",
  "type": "module",
  "main": "dist/bundle.mjs",
  "exports": {
    ".": "./dist/bundle.mjs"
  },
  "bin": {
    "reflect": "bin/reflect-sync.mjs",
    "reflect-sync": "bin/reflect-sync.mjs"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist node_modules bundle",
    "prettier-all": "prettier -w src",
    "test": "pnpm build && NODE_OPTIONS='--no-warnings' jest --maxWorkers 50%",
    "test:watch": "pnpm build &&  NODE_OPTIONS='--no-warnings' jest --watch",
    "prepublishOnly": "pnpm clean && pnpm bundle && pnpm lint && pnpm audit && rm dist/bundle.cjs",
    "bundle:worker": "rollup -c rollup.worker.mjs",
    "bundle:main": "rollup -c rollup.config.mjs",
    "bundle": "pnpm install && pnpm build && pnpm bundle:worker && pnpm bundle:main && chmod +x dist/bundle.mjs",
    "sea:blob": "node --experimental-sea-config sea.config.json",
    "sea:inject": "cp $(command -v node) dist/reflect-sync && pnpx postject dist/reflect-sync NODE_SEA_BLOB dist/reflect-sync.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2 2>&1 | sed -E '/find string offset for section name/d'",
    "sea": "pnpm bundle && pnpm sea:blob && pnpm sea:inject",
    "sea:deno": "deno compile --allow-all --output dist/reflect-sync dist/cli.js",
    "sea:deno:aarch64-linux": "deno compile --allow-all --output dist/reflect-sync-aarch64-linux --target aarch64-unknown-linux-gnu dist/cli.js",
    "sea:deno:x86_64-linux": "deno compile --allow-all --output dist/reflect-sync-x86_64-linux --target x86_64-unknown-linux-gnu dist/cli.js",
    "sea:deno:aarch64-apple": "deno compile --allow-all --output dist/reflect-sync-aarch64-apple --target aarch64-apple-darwin dist/cli.js",
    "sea:deno:x86_64-apple": "deno compile --allow-all --output dist/reflect-sync-x86_64-apple --target x86_64-apple-darwin dist/cli.js",
    "sea:deno:windows": "deno compile --allow-all --output dist/reflect-sync-windows.exe --target x86_64-pc-windows-msvc dist/cli.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "sanity": "pnpm prettier-all && pnpm build && pnpm lint && pnpm test"
  },
  "engines": {
    "node": ">=22"
  },
  "files": ["bin", "dist/bundle.mjs", "README.md", "LICENSE"],
  "keywords": ["rsync", "sqlite", "sync", "watch", "ssh", "mutagen", "backup"],
  "license": "MIT",
  "packageManager": "pnpm@10.19.0",
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@nodelib/fs.walk": "^3.0.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "ascii-table3": "^1.0.1",
    "chokidar": "^4.0.3",
    "commander": "^14.0.2",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "ignore": "^7.0.5",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "ts-jest": "29",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "author": "William Stein (wstein@sagemath.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/sagemathinc/reflect-sync"
  },
  "homepage": "https://github.com/sagemathinc/reflect-sync"
}
